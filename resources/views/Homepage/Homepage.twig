{% extends 'Ceres::Homepage.Homepage' %}
{% set lang = services.sessionStorage.getLang() %}

{% set homepageFirstSlideTitleDE  = config("CeresGlamour.homepage.homepageFirstSlideTitleDE") %}
{% set homepageFirstSlideTitleEN  = config("CeresGlamour.homepage.homepageFirstSlideTitleEN") %}
{% set homepageFirstSlideImgUrl  = config("CeresGlamour.homepage.homepageFirstSlideImgUrl") %}
{% set homepageFirstSlideLink  = config("CeresGlamour.homepage.homepageFirstSlideLink") %}

{% set homepageSecondSlideTitleDE  = config("CeresGlamour.homepage.homepageSecondSlideTitleDE") %}
{% set homepageSecondSlideTitleEN  = config("CeresGlamour.homepage.homepageSecondSlideTitleEN") %}
{% set homepageSecondSlideImgUrl  = config("CeresGlamour.homepage.homepageSecondSlideImgUrl") %}
{% set homepageSecondSlideLink  = config("CeresGlamour.homepage.homepageSecondSlideLink") %}

{% set homepageExtraHero1TitleDE = config("CeresGlamour.homepage.homepageExtraHero1TitleDE") %}
{% set homepageExtraHero1TitleEN = config("CeresGlamour.homepage.homepageExtraHero1TitleEN") %}
{% set homepageExtraHero1ImgUrl = config("CeresGlamour.homepage.homepageExtraHero1ImgUrl") %}
{% set homepageExtraHero1Link = config("CeresGlamour.homepage.homepageExtraHero1Link") %}

{% set homepageExtraHero2TitleDE = config("CeresGlamour.homepage.homepageExtraHero2TitleDE") %}
{% set homepageExtraHero2TitleEN = config("CeresGlamour.homepage.homepageExtraHero2TitleEN") %}
{% set homepageExtraHero2ImgUrl = config("CeresGlamour.homepage.homepageExtraHero2ImgUrl") %}
{% set homepageExtraHero2Link = config("CeresGlamour.homepage.homepageExtraHero2Link") %}

{% set homepageSaleTitleDE = config("CeresGlamour.homepage.homepageSaleTitleDE") %}
{% set homepageSaleTitleEN = config("CeresGlamour.homepage.homepageSaleTitleEN") %}
{% set homepageSaleImgUrl = config("CeresGlamour.homepage.homepageSaleImgUrl") %}
{% set homepageSaleLink = config("CeresGlamour.homepage.homepageSaleLink") %}

{% set homepageSale2TitleDE = config("CeresGlamour.homepage.homepageSale2TitleDE") %}
{% set homepageSale2TitleEN = config("CeresGlamour.homepage.homepageSale2TitleEN") %}
{% set homepageSale2ImgUrl = config("CeresGlamour.homepage.homepageSale2ImgUrl") %}
{% set homepageSale2Link = config("CeresGlamour.homepage.homepageSale2Link") %}

{% set homepageFeatCat1TitleDE = config("CeresGlamour.homepage.homepageFeatCat1TitleDE") %}
{% set homepageFeatCat1TitleEN = config("CeresGlamour.homepage.homepageFeatCat1TitleEN") %}
{% set homepageFeatCat1ImgUrl = config("CeresGlamour.homepage.homepageFeatCat1ImgUrl") %}
{% set homepageFeatCat1Link = config("CeresGlamour.homepage.homepageFeatCat1Link") %}

{% set homepageFeatCat2TitleDE = config("CeresGlamour.homepage.homepageFeatCat2TitleDE") %}
{% set homepageFeatCat2TitleEN = config("CeresGlamour.homepage.homepageFeatCat2TitleEN") %}
{% set homepageFeatCat2ImgUrl = config("CeresGlamour.homepage.homepageFeatCat2ImgUrl") %}
{% set homepageFeatCat2Link = config("CeresGlamour.homepage.homepageFeatCat2Link") %}

{% set homepageNewTitleDE = config("CeresGlamour.homepage.homepageNewTitleDE") %}
{% set homepageNewTitleEN = config("CeresGlamour.homepage.homepageNewTitleEN") %}
{% set homepageNewId = config("CeresGlamour.homepage.homepageNewId") %}

{% set homepageTopsellerTitleDE = config("CeresGlamour.homepage.homepageTopsellerTitleDE") %}
{% set homepageTopsellerTitleEN = config("CeresGlamour.homepage.homepageTopsellerTitleEN") %}
{% set homepageTopsellerId = config("CeresGlamour.homepage.homepageTopsellerId") %}

{% import "Ceres::PageDesign.Macros.LayoutContainer" as LayoutContainer %}

{% set paginatedResultNew      = services.itemLoader.loadForTemplate('Ceres::ItemList.ItemListView', itemLoaderPresets.categoryList, {'categoryId': homepageNewId, 'page':1, 'items':4, 'sorting': itemSort, 'variationShowType': config("Ceres.item.variation_show_type")}) %}

{% set paginatedResultTop      = services.itemLoader.loadForTemplate('Ceres::ItemList.ItemListView', itemLoaderPresets.categoryList, {'categoryId': homepageTopsellerId, 'page':1, 'items':4, 'sorting': itemSort, 'variationShowType': config("Ceres.item.variation_show_type")}) %}


{% set itemListNew             = paginatedResultNew.documents %}
{% set itemListTop             = paginatedResultTop.documents %}


{% block ThemeHomepage %}

{{ component( "Ceres::ItemList.Components.ItemList") }}
{{ component( "Ceres::ItemList.Components.CategoryImageCarousel") }}
{{ component( "Ceres::Basket.Components.AddToBasket" ) }}

<div class="home container-max page-content">
    
    <div class="cmp cmp-hero">

        <div class="hero-main">
            <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner" role="listbox">
                    <div class="carousel-item active">
                        <a class="hero-category" href="{{ homepageFirstSlideLink }}">
                            <img src="{{ homepageFirstSlideImgUrl }}" alt="{{ homepageFirstSlideTitleDE }}" class="img-fluid">
                            <div class="hero-category-inner">
                                <h4 class="hero-category-headline">
                                    {% if lang == "de" %}
                                        {{ homepageFirstSlideTitleDE }}
                                    {% elseif lang == "en" %}
                                        {{ homepageFirstSlideTitleEN }}
                                    {% endif %}
                                </h4>
                                <div class="hero-category-cta">
                                    {% if lang == "de" %}
                                        Ansehen
                                    {% elseif lang == "en" %}
                                        Show
                                    {% endif %}
                                    <i class="fa fa-chevron-right" aria-hidden="true"></i>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="carousel-item">
                        <a class="hero-category" href="{{ homepageSecondSlideLink }}">
                            <img src="{{ homepageSecondSlideImgUrl }}" alt="{{ homepageSecondSlideTitleDE }}" class="img-fluid">
                            <div class="hero-category-inner">
                                <h4 class="hero-category-headline">
                                    {% if lang == "de" %}
                                        {{ homepageSecondSlideTitleDE }}
                                    {% elseif lang == "en" %}
                                        {{ homepageSecondSlideTitleEN }}
                                    {% endif %}
                                </h4>
                                <div class="hero-category-cta">
                                    {% if lang == "de" %}
                                        Ansehen
                                    {% elseif lang == "en" %}
                                        Show
                                    {% endif %}
                                    <i class="fa fa-chevron-right" aria-hidden="true"></i>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>

                <ol class="carousel-indicators">
                    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                    <li data-target="#carousel-example-generic" data-slide-to="1" class=""></li>
                </ol>

            </div>
        </div>

        <div class="hero-xtras">
            <a class="hero-category" href="{{ homepageExtraHero1Link }}">
                <img src="{{ homepageExtraHero1ImgUrl }}" alt="{{ homepageExtraHero1TitleDE }}">
                <div class="hero-category-inner">
                    <h4 class="hero-category-headline">
                        {% if lang == "de" %}
                            {{ homepageExtraHero1TitleDE }}
                        {% elseif lang == "en" %}
                            {{ homepageExtraHero1TitleEN }}
                        {% endif %}
                    </h4>

                </div>
            </a>
            <a class="hero-category" href="{{ homepageExtraHero2Link }}">
                <img src="{{ homepageExtraHero2ImgUrl }}" alt="{{ homepageExtraHero2TitleDE }}">
                <div class="hero-category-inner">
                    <h4 class="hero-category-headline">
                        {% if lang == "de" %}
                            {{ homepageExtraHero2TitleDE }}
                        {% elseif lang == "en" %}
                            {{ homepageExtraHero2TitleEN }}
                        {% endif %}
                    </h4>

                </div>
            </a>
        </div>

    </div>

    <!-- SALE NEW -->
    <div class="row prop-row m-y-2 sale-new">

        <div class="col-xs-12 col-md-6">
            <div class="prop-xs-6-4 prop-md-3-1">
                <div class="prop-inner">
                    <a class="featured-sale-new"
                       href="{{ homepageSaleLink }}">
                        <img src="{{ homepageSaleImgUrl }}"
                            alt="{% if lang == "de" %}
                                    {{ homepageSaleTitleDE }}
                                {% elseif lang == "en" %}
                                    {{ homepageSaleTitleEN }}
                                {% endif %}">

                        <div class="featured-category-inner">
                            <h4 class="featured-category-headline">
                                {% if lang == "de" %}
                                    {{ homepageSaleTitleDE }}
                                {% elseif lang == "en" %}
                                    {{ homepageSaleTitleEN }}
                                {% endif %}
                            </h4>
                        </div>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-xs-12 col-md-6">
            <div class="prop-xs-6-4 prop-md-3-1">
                <div class="prop-inner">
                    <a class="featured-sale-new"
                       href="{{ homepageSale2Link }}">
                        <img src="{{ homepageSale2ImgUrl }}"
                            alt="{% if lang == "de" %}
                                    {{ homepageSale2TitleDE }}
                                {% elseif lang == "en" %}
                                    {{ homepageSale2TitleEN }}
                                {% endif %}">

                        <div class="featured-category-inner">
                            <h4 class="featured-category-headline">
                                {% if lang == "de" %}
                                    {{ homepageSale2TitleDE }}
                                {% elseif lang == "en" %}
                                    {{ homepageSale2TitleEN }}
                                {% endif %}
                            </h4>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- END SALE NEW -->

    <div class="m-b-2">
        <h4 class="section-header">
            {% if lang == "de" %}
                {{ homepageNewTitleDE }}
            {% elseif lang == "en" %}
                {{ homepageNewTitleEN }}
            {% endif %}
        </h4>
        <!-- crosssell start -->
        <div class="row">
            <div class="col-xs-12">
                <ul class="product-list row grid">
                    {% for item in itemListNew %}
                        <li class="col-xs-12 col-sm-6 col-md-3">
                            {% include "Ceres::Category.Item.Partials.CategoryListItem" with { 'item': item } %}
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>

    <!-- CATEGORIES -->

    <div class="row prop-row m-b-2">
        <div class="col-xs-12 col-md-8">
            <div class="prop-xs-2-1">
                <div class="prop-inner">
                    <a class="featured-category" href="{{ homepageFeatCat1Link }}">
                        <img src="{{ homepageFeatCat1ImgUrl }}" alt="{{ homepageFeatCat1TitleDE }}">
                        <div class="featured-category-inner">
                            <h4 class="featured-category-headline">
                                {% if lang == "de" %}
                                    {{ homepageFeatCat1TitleDE }}
                                {% elseif lang == "en" %}
                                    {{ homepageFeatCat1TitleEN }}
                                {% endif %}
                            </h4>

                        </div>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-xs-12 col-md-4">
            <div class="prop-xs-2-1 prop-md-1-1">
                <div class="prop-inner">
                    <a class="featured-category" href="{{ homepageFeatCat2Link }}">
                        <img src="{{ homepageFeatCat2ImgUrl }}" alt="{{ homepageFeatCat2TitleDE }}">
                        <div class="featured-category-inner">
                            <h4 class="featured-category-headline">
                                {% if lang == "de" %}
                                    {{ homepageFeatCat2TitleDE }}
                                {% elseif lang == "en" %}
                                    {{ homepageFeatCat2TitleEN }}
                                {% endif %}
                            </h4>

                        </div>
                    </a>
                </div>
            </div>
        </div>
    
        
    </div>

    <!-- END CATEGORIES -->

    <div class="m-b-2">
        <h4 class="section-header">
            {% if lang == "de" %}
                {{ homepageTopsellerTitleDE }}
            {% elseif lang == "en" %}
                {{ homepageTopsellerTitleEN }}
            {% endif %}
        </h4>
        <!-- crosssell start -->
        <div class="row">    
            <div class="col-xs-12">
               <ul class="product-list row grid">
                    {% for item in itemListTop %}
                        <li class="col-xs-12 col-sm-6 col-md-3">
                            {% include "Ceres::Category.Item.Partials.CategoryListItem" with { 'item': item } %}
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
</div>
{% endblock %}